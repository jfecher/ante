fun u64.parse: Str s -> Maybe u64
    mut i = 0
    mut sum = 0u64

    while s#i != '\0' do
        let c = s#i
        if c >= '0' and c <= '9' then
            sum *= 10
            sum += c - '0'
            i += 1
        else
            return None

    Some sum

fun i64.parse: Str s -> Maybe i64
    mut i = 0
    mut sum = 0i64
    let isNeg =
        if s.len != 0 and s#0 = '-' then
            i += 1
            true
        else false

    while s#i != '\0' do
        let c = s#i
        if c >= '0' and c <= '9' then
            sum *= 10
            sum += c - '0'
            i += 1
        else
            return None

    Some (if isNeg then -1 * sum else sum)



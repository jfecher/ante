//Ante datatypes
type Str = ref c8 cStr, usz len

type Maybe 't =
   | Some 't
   | None

fun (=): Maybe l r -> bool
    match l with
    | Some lv ->
        match r with
        | Some rv -> lv = rv
        | None -> false
    | None ->
        match r with
        | Some rv -> false
        | None -> true

fun Str.init: Maybe l -> Str
    match l with
    | Some val -> Str val
    | None -> "None"


